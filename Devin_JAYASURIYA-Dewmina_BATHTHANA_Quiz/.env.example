# Clé API OpenAI (requis)
OPENAI_API_KEY=sk-...

# Modèle OpenAI à utiliser (par défaut: gpt-4o)
OPENAI_MODEL=gpt-4o

# Clé API Anthropic (optionnel - support Claude)
ANTHROPIC_API_KEY=sk-ant-...

# Modèle Anthropic (par défaut: claude-3-5-sonnet-latest)
ANTHROPIC_MODEL=claude-3-5-sonnet-latest

# Configuration de l'embedding (par défaut: text-embedding-3-large)
EMBEDDING_MODEL=text-embedding-3-large

# Configuration de sortie
OUTPUT_LANGUAGE=fr
DEFAULT_DIFFICULTY=1
MIN_QUESTIONS=5
MAX_QUESTIONS=20

# Options de génération
INCLUDE_EXPLANATIONS=true
INCLUDE_DIFFICULTY=true
SHUFFLE_OPTIONS=true

# Chemins (optionnel)
DOCUMENT_PATH=.
OUTPUT_PATH=./output
